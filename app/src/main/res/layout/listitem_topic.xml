<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
   android:background="@drawable/bg_border_topic"
    >
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#2b323a"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="210dp"

                     >

                        <ImageView
                            android:id="@+id/img_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                    />

                        <ImageView
                            android:id="@+id/image_myorder"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_below="@+id/title_bottom_ll"
                            android:layout_margin="-2dp"
                            android:background="@mipmap/brand_order" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="5dp"

                            android:layout_below="@+id/image_myorder"
                            >
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="-10dp"
                                android:layout_toRightOf="@+id/avator_layout"
                                android:background="@drawable/bg_shape_title"
                                android:paddingLeft="10dp"
                                android:paddingRight="15dp">

                                <TextView
                                    android:id="@+id/header_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="广州用户公司"
                                    android:textColor="#CFD4D8"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/header_location"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/header_name"
                                    android:drawableLeft="@drawable/attr_top"
                                    android:drawablePadding="4dp"
                                    android:gravity="center"
                                    android:maxLength="12"
                                    android:text="广东省佛山市"
                                    android:textColor="#5f666e"
                                    android:textSize="12sp" />

                                <RatingBar
                                    android:id="@+id/bar"
                                    style="@style/MaterialRatingBarSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="8dp"
                                    android:layout_marginLeft="@dimen/dp5"
                                    android:layout_marginTop="5dp"
                                    android:layout_below="@+id/header_name"
                                    android:layout_toRightOf="@+id/header_location" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/avator_layout"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerVertical="true"
                                android:background="@drawable/bg_headicon"
                                android:gravity="center">

                                <com.houwei.guaishang.view.CircleImageView
                                    android:id="@+id/avator"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/user_photo" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>


                </RelativeLayout>

                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="84dp"
                    android:layout_marginTop="16dp"
                    android:maxLines="2"
                    android:background="@drawable/transparent_gray_circle"
                    android:text="内容"
                    android:textColor="#cfd4d8"
                    android:textColorLink="#0082CB"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/delete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:duplicateParentState="true"
                    android:focusable="false"
                    android:paddingBottom="4dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="4dp"
                    android:text="删除"
                    android:textColor="@color/red_color"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/l_line"
                    android:visibility="gone" />

                <com.houwei.guaishang.view.NumberProgressBar
                    android:id="@+id/bar_num"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    app:progress_reached_color="@color/orange_transparent"
                    app:progress_text_color="@color/orange_transparent" />
                <com.houwei.guaishang.view.ProgressView
                    android:id="@+id/bar_status"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="8dp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:duplicateParentState="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/prise_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:addStatesFromChildren="true"
                        android:clickable="true"
                        android:duplicateParentState="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="5dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/attention" />
                        <TextView
                            android:id="@+id/price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:gravity="center"
                            android:textColor="#636365"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/share_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@id/prise_ll"
                        android:clickable="true"
                        android:layout_centerVertical="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="5dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/l_share_false" />

                        <TextView
                            android:id="@+id/share_count_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:gravity="center"
                            android:textColor="#636365"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/product_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/bg_produce"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingTop="@dimen/dp5"
                        android:paddingBottom="@dimen/dp5"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        >
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="总价"
                            android:textColor="#acb2c1"
                            android:textSize="13sp"
                            android:layout_marginRight="@dimen/dp5"
                            android:background="@null"
                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#666666"
                            />
                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="周期"
                            android:textColor="#acb2c1"
                            android:textSize="13sp"
                            android:layout_marginLeft="@dimen/dp5"
                            android:background="@null"
                            />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="150dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:background="@drawable/topic_order_bg"

            >
        <View
            android:id="@+id/order_btn_bg"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:background="@drawable/topic_order_bg"/>
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            >
            <com.houwei.guaishang.widget.FloatButton
                android:id="@+id/order_btn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                ></com.houwei.guaishang.widget.FloatButton>

            <TextView
                android:id="@+id/count"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_float_btn_d31c20"
                android:gravity="center"
                android:padding="@dimen/dp5"
                android:text="6"
                android:textColor="#666666"
                android:textSize="10sp" />
        </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>