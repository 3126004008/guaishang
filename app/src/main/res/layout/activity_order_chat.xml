<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="#333038">

        <ImageView
            style="@style/titleBackStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="83dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_back"
        android:background="#e8e8e8"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:background="@drawable/black_round"
        android:layout_below="@+id/ll_back" />

    <com.houwei.guaishang.layout.NoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/recycle_view"
        android:layout_below="@+id/ll_back"/>

    <!--<FrameLayout-->
        <!--android:id="@+id/fl_container"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_toRightOf="@+id/recycle_view"-->
        <!--android:layout_below="@+id/ll_back"/>-->

</RelativeLayout>
